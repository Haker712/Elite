<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#394b9d"
            android:paddingBottom="13dp"
            android:paddingTop="13dp" >

            <TextView
                android:id="@+id/creditcollection_txtCreditCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Credit Collection"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="23sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#2e3146"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp" >

                    <TextView
                        android:id="@+id/creditcollection_txtInvNo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Inv No"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/creditcollection_txtInvDate"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Inv Date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/creditcollection_txtInvoiceAmount"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Invoice Amount"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />
                    
                    <TextView
                        android:id="@+id/creditcollection_txtCreditTerm"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Due Date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />
                    
                    <TextView
                        android:id="@+id/creditcollection_txtPaidAmt"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Paid Amt"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />
                    
                     <TextView
                        android:id="@+id/creditcollection_txtCreditTerm"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/creditcollection_lstProduct"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" >
                        </ListView>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/creditcollection_txtTotalAmt"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:text="Total Amount                     :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/creditcollection_txtTotalAmtNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="5,000,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/creditcollection_txtTotalPaidAmt"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:text="Total Paid Amount           :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/creditcollection_txtTotalPaidAmtNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="100,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/creditcollection_txtTotalRemAmt"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:text="Toal Remaining Amount :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/creditcollection_txtTotalRemAmtNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="4,000,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <custom.scroll.LockableScrollView
                android:id="@+id/creditcollection_scrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:padding="7dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/creditcollection_txtDeliveryDate"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:text="Delivery Date :"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/creditcollection_txtDeliveryDateNo"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:text="12/4/2014"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp" >
                        </LinearLayout>
                        
                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="7dp" >

                            <TextView
                                android:id="@+id/creditcollection_txtPayAmt"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Payer Name :"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <EditText
                                android:id="@+id/creditcollection_txtPayerName"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp" >

                            <drawing.canvas.DrawingCanvas
                                android:id="@+id/creditcollection_drawingCanvas"
                                android:layout_width="fill_parent"
                                android:layout_height="160dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/sign_bg"
                                android:inputType="textPostalAddress" />

                            <Button
                                android:id="@+id/creditcollection_btnClear"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/clear_btn_selector" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp" >

                            <CheckBox
                                android:id="@+id/creditcollection_chkApprove"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:button="@drawable/checkbox_selector"
                                android:text="  I have approved all data is correct." />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <Button
                                android:id="@+id/creditcollection_btnConfirm"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_selector"
                                android:text="Confirm"
                                android:textColor="#ffffff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </custom.scroll.LockableScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>