<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#394b9d"
            android:paddingBottom="13dp"
            android:paddingTop="13dp" >

            <TextView
                android:id="@+id/advpaymentpreorder_txtAdvancePaymentPreOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Pre Order Page"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="23sp" />

            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp" >

                    <TextView
                        android:id="@+id/advpaymentpage_txtInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="Invoice ID:"
                        android:textAppearance="?android:attr/textAppearanceMedium"  />

                    <TextView
                        android:id="@+id/advpaymentpreorder_txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/advpaymentpage_txtAdvDate"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="12/5/2014"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/advpaymentpreorder_txtInvNO"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_alignBaseline="@+id/advpaymentpage_txtInvoice"
                        android:layout_alignBottom="@+id/advpaymentpage_txtInvoice"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/advpaymentpage_txtInvoice"
                        android:text="Inv-0123456789"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/advpaymentpage_txtAdvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/advpaymentpreorder_txtInvNO"
                        android:layout_alignBottom="@+id/advpaymentpreorder_txtInvNO"
                        android:layout_toLeftOf="@+id/advpaymentpreorder_txtDate"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Advance Payment Date:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:background="#2e3146" >

                    <TextView
                        android:id="@+id/advpaymentpage_txtProduct"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Product"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/advpaymentpage_txtOrderQty"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ordered Qty"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/advpaymentpage_txtPrice"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/advpaymentpage_txtTotalAmt"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Total Amt"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <ListView
                    android:id="@+id/advpaymentpage_lstProduct"
                    android:layout_width="match_parent"
                    android:layout_height="280dp" >
                </ListView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="Total Amount :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/advpaymentpreorder_txtTotalAmountNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="5,000,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="Advance Payment Amount :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/advpaymentpreorder_txtAdvPayAmtNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="100,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="Net Amount :"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/advpaymentpreorder_txtNetAmtNo"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="4,000,000"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <custom.scroll.LockableScrollView
                android:id="@+id/advpaymentpreorder_scrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:padding="7dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Date :"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edDeliveryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:ems="10" 
                                android:editable="false"/>

                            <Button
                                android:id="@+id/btnDeliveryDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/calenda" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp" 
                            android:orientation="vertical"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/advpaymentpage_txtPayAmt"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Advance Payment Amount :"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <EditText
                                android:id="@+id/advpaymentpreorder_editTextPayAmtNo"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:inputType="number" />

                        </LinearLayout>

                        
						<TextView
                                android:id="@+id/advpaymentpreorder_txtSignature"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Signature :"
                                android:textAppearance="?android:attr/textAppearanceMedium" />
                        
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            
                            

                            <drawing.canvas.DrawingCanvas
                                android:id="@+id/advpaymentpreorder_drawingCanvas"
                                android:layout_width="fill_parent"
                                android:layout_height="140dp"
                                android:layout_weight="1"
                                android:background="@drawable/sign_bg"
                                android:inputType="textPostalAddress" />

                            <Button
                                android:id="@+id/advpaymentpreorder_btnClear"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/clear_btn_selector" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" >

                            <CheckBox
                                android:id="@+id/advpaymentpreorder_chkApprove"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:button="@drawable/checkbox_selector"
                                android:text="  I have approved all data is correct." />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <Button
                                android:id="@+id/advpaymentpreorder_btnConfirm"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_selector"
                                android:text="Confirm"
                                android:textColor="#ffffff" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </custom.scroll.LockableScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>